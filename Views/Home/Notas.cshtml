@model List<Nota>;
@{
    ViewData["Title"] = "Mis notas";
}

<h1>Mis notas</h1>
@if(Model != null){
    <p>Hay un total de @Model.Count() notas</p>
}

@foreach (Nota nota in Model)
{
    <div>
        <h2>@nota.Titulo</h2>
        <p>@nota.Cuerpo</p>
    </div>
}

<br>

<form action='@Url.Action("CrearNota", "Home")' method="POST">
    <label for="titulo">Titulo de la nota</label>
    <input type="text" name="titulo" required>
    <label for="texto">Texto de la nota</label>
    <textarea name="texto"cols="30" rows="10"></textarea>
    <button type="submit">Agregar nota</button>
</form>

<br>

<form action='@Url.Action("SacarUsuarioEnSesion", "Home")'>
    <button type="submit">Salir</button>
</form>